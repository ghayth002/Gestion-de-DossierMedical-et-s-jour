{{ form_start(form, {'attr': {'class': 'form-container animate-fade-up'}}) }}
    <div class="form-header">
        <div class="header-icon">
            <i class="material-icons">hotel</i>
        </div>
        <div class="header-content">
            <h4 class="header-title">{{ button_label is defined ? 'Modifier le séjour' : 'Nouveau séjour' }}</h4>
            <p class="header-subtitle">Veuillez remplir les informations du séjour</p>
        </div>
    </div>

    <div class="form-body">
        <div class="form-section">
            <div class="section-header">
                <i class="material-icons">folder_shared</i>
                <h5>Dossier Médical</h5>
            </div>
            <div class="section-content">
                <div class="input-field">
                    {{ form_widget(form.dossierMedicale, {
                        'attr': {
                            'class': 'select-custom',
                            'placeholder': 'Sélectionner un dossier médical'
                        }
                    }) }}
                    {{ form_label(form.dossierMedicale, null, {'label_attr': {'class': 'active'}}) }}
                    {{ form_errors(form.dossierMedicale, {'attr': {'class': 'error-message'}}) }}
                </div>
            </div>
        </div>

        <div class="form-section">
            <div class="section-header">
                <i class="material-icons">calendar_today</i>
                <h5>Période du Séjour</h5>
            </div>
            <div class="section-content">
                <div class="date-range-group">
                    <div class="input-field">
                        {{ form_widget(form.dateEntree, {
                            'attr': {
                                'class': 'datepicker-custom',
                                'placeholder': 'JJ/MM/AAAA'
                            }
                        }) }}
                        {{ form_label(form.dateEntree, 'Date d\'entrée', {'label_attr': {'class': 'active'}}) }}
                        {{ form_errors(form.dateEntree, {'attr': {'class': 'error-message'}}) }}
                    </div>

                    <div class="input-field">
                        {{ form_widget(form.dateSortie, {
                            'attr': {
                                'class': 'datepicker-custom',
                                'placeholder': 'JJ/MM/AAAA'
                            }
                        }) }}
                        {{ form_label(form.dateSortie, 'Date de sortie', {'label_attr': {'class': 'active'}}) }}
                        {{ form_errors(form.dateSortie, {'attr': {'class': 'error-message'}}) }}
                    </div>
                </div>

                <div class="input-field">
                    {{ form_widget(form.typeSejour, {
                        'attr': {
                            'class': 'select-custom',
                            'placeholder': 'Sélectionner le type de séjour'
                        }
                    }) }}
                    {{ form_label(form.typeSejour, null, {'label_attr': {'class': 'active'}}) }}
                    {{ form_errors(form.typeSejour, {'attr': {'class': 'error-message'}}) }}
                </div>
            </div>
        </div>

        <div class="form-section">
            <div class="section-header">
                <i class="material-icons">payments</i>
                <h5>Informations Financières</h5>
            </div>
            <div class="section-content">
                <div class="price-group">
                    <div class="input-field">
                        {{ form_widget(form.fraisSejour, {
                            'attr': {
                                'class': 'input-custom price-input',
                                'placeholder': '0.00',
                                'step': '0.01',
                                'min': '0'
                            }
                        }) }}
                        {{ form_label(form.fraisSejour, null, {'label_attr': {'class': 'active'}}) }}
                        {{ form_errors(form.fraisSejour, {'attr': {'class': 'error-message'}}) }}
                        <span class="currency-symbol">DT</span>
                    </div>

                    <div class="input-field">
                        {{ form_widget(form.prixExtras, {
                            'attr': {
                                'class': 'input-custom price-input',
                                'placeholder': '0.00',
                                'step': '0.01',
                                'min': '0'
                            }
                        }) }}
                        {{ form_label(form.prixExtras, null, {'label_attr': {'class': 'active'}}) }}
                        {{ form_errors(form.prixExtras, {'attr': {'class': 'error-message'}}) }}
                        <span class="currency-symbol">DT</span>
                    </div>
                </div>

                <div class="payment-status-group">
                    <div class="input-field">
                        {{ form_widget(form.moyenPaiement, {
                            'attr': {
                                'class': 'select-custom',
                                'placeholder': 'Sélectionner le moyen de paiement'
                            }
                        }) }}
                        {{ form_label(form.moyenPaiement, null, {'label_attr': {'class': 'active'}}) }}
                        {{ form_errors(form.moyenPaiement, {'attr': {'class': 'error-message'}}) }}
                    </div>

                    <div class="input-field">
                        {{ form_widget(form.statutPaiement, {
                            'attr': {
                                'class': 'select-custom',
                                'placeholder': 'Sélectionner le statut'
                            }
                        }) }}
                        {{ form_label(form.statutPaiement, null, {'label_attr': {'class': 'active'}}) }}
                        {{ form_errors(form.statutPaiement, {'attr': {'class': 'error-message'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-footer">
        <div class="action-buttons">
            <a href="{{ path('app_sejour_index') }}" class="btn-flat waves-effect">
                <i class="material-icons left">arrow_back</i>
                Retour
            </a>
            <button class="btn primary waves-effect waves-light" type="submit">
                <i class="material-icons left">save</i>
                {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div>
{{ form_end(form) }}

