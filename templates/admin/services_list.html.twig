 <div class="table-container">
    <h1 class="table-title">Services</h1>
    <!-- Button to Add New Service -->
    <div class="add-service-button">
        <a href="{{ path('app_service_new') }}" class="btn btn-add">Add New Service</a>
    </div>

    <table class="services-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for service in services %}
                <tr>
                    <td>{{ service.name }}</td>
                    <td>{{ service.description }}</td>
                    <td>{{ service.price }}</td>
                    <td class="actions">
                        <!-- Edit Button -->
                        <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="btn btn-edit">Edit</a>

                        <!-- Delete Button -->
                        <form action="{{ path('app_service_delete', {'id': service.id}) }}" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-delete">Delete</button>
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

