{# templates/admin/dashboard.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="{{ asset('css1/admin.css') }}" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body style="font-family: Arial, sans-serif; background-color: #F0F0F0;">

    <div class="admin-container" style="display: flex; min-height: 100vh;">
        <div class="sidebar">
            <h3>Admin Menu</h3>
            <ul>
                <li><a href="{{ path('admin_home') }}"><i class="fas fa-home"></i> Dashboard</a></li>
                <li><a href="{{ path('admin_users') }}"><i class="fas fa-users"></i> Users</a></li>
                <li><a href="{{ path('admin_services') }}"><i class="fas fa-hospital"></i> Services</a></li>
                <li><a href="{{ path('admin_equipment') }}"><i class="fas fa-tools"></i> Equipment</a></li>
                <li><a href="{{ path('departement_index') }}"><i class="fas fa-building"></i> Infrastructure</a></li>
                <li><a href="{{ path('app_dossier_medicale_index') }}"><i class="fas fa-folder-medical"></i> Dossiers Médicaux</a></li>
                <li><a href="{{ path('admin_medication_stock') }}"><i class="fas fa-pills"></i> Medication Stock</a></li>
            </ul>
        </div>

        <div class="main-content">
            <h1>Welcome to the Admin Dashboard</h1>
            <p style="color: #00A9E0;">Manage the hospital services and operations here.</p>

            <!-- Task Sections -->
            <div class="task-sections">
                <div class="task-card" style="background-color: #00A9E0; color: white;">
                    <div class="task-icon">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                    <h3>Users</h3>
                    <p>Manage hospital staff and users</p>
                    <a href="{{ path('admin_users') }}" class="task-link">Go to Users</a>
                </div>
                <div class="task-card" style="background-color: #00A9E0; color: white;">
                    <div class="task-icon">
                        <i class="fas fa-hospital fa-2x"></i>
                    </div>
                    <h3>Services</h3>
                    <p>Manage hospital services</p>
                    <a href="{{ path('admin_services') }}" class="task-link">Go to Services</a>
                </div>
                <div class="task-card" style="background-color: #003B5C; color: white;">
                    <div class="task-icon">
                        <i class="fas fa-tools fa-2x"></i>
                    </div>
                    <h3>Equipment</h3>
                    <p>Manage hospital equipment</p>
                    <a href="{{ path('admin_equipment') }}" class="task-link">Go to Equipment</a>
                </div>
                <div class="task-card" style="background-color: #00A9E0; color: white;">
                    <div class="task-icon">
                        <i class="fas fa-building fa-2x"></i>
                    </div>
                    <h3>Infrastructure</h3>
                    <p>Manage hospital infrastructure</p>
                    <a href="{{ path('departement_index') }}" class="task-link">Go to Infrastructure</a>
                </div>
                <div class="task-card" style="background-color: #003B5C; color: white;">
                    <div class="task-icon">
                        <i class="fas fa-folder-medical fa-2x"></i>
                    </div>
                    <h3>Dossiers Médicaux</h3>
                    <p>Manage patient medical records</p>
                    <a href="{{ path('app_dossier_medicale_index') }}" class="task-link">Go to Medical Records</a>
                </div>
                <div class="task-card" style="background-color: #003B5C; color: white;">
                    <div class="task-icon">
                        <i class="fas fa-pills fa-2x"></i>
                    </div>
                    <h3>Medication Stock</h3>
                    <p>Manage medication stock</p>
                    <a href="{{ path('admin_medication_stock') }}" class="task-link">Go to Medication Stock</a>
                </div>
            </div>
        </div>
    </div>

    <style>
        .sidebar {
            width: 250px;
            background-color: #003B5C;
            padding: 20px;
            color: white;
        }

        .sidebar h3 {
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            margin-bottom: 10px;
        }

        .sidebar ul li a {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .sidebar ul li a:hover {
            background-color: rgba(255,255,255,0.1);
        }

        .sidebar ul li a i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }

        .main-content {
            flex: 1;
            padding: 20px;
        }

        .task-sections {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .task-card {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            position: relative;
            overflow: hidden;
        }

        .task-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

        .task-icon {
            margin-bottom: 15px;
            background: rgba(255,255,255,0.1);
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .task-card h3 {
            margin: 0 0 10px 0;
            font-size: 1.5rem;
        }

        .task-card p {
            margin: 0 0 20px 0;
            opacity: 0.9;
        }

        .task-link {
            color: white;
            text-decoration: none;
            padding: 8px 16px;
            background: rgba(255,255,255,0.1);
            border-radius: 5px;
            display: inline-block;
            transition: background-color 0.3s;
        }

        .task-link:hover {
            background: rgba(255,255,255,0.2);
            color: white;
        }
    </style>
</body>
</html>
