 {% extends 'base.html.twig' %}

{% block title %}New Consultation{% endblock %}

{% block body %}
    <h1>Create a Consultation</h1>

    <!-- SEARCH FORM -->
    <fieldset>
        <legend>Search Your Consultations</legend>
        <form action="{{ path('app_search_consultation') }}" method="POST">
            <input type="text" name="patientIdentifier" placeholder="Enter your patient ID" required>
            <button type="submit">Search</button>
        </form>
    </fieldset>
    
    <hr>

    <!-- AVAILABLE SERVICES -->
    <div>
        <h2>Available Services</h2>
        <ul>
            {% for service in services %}
                <li>
                    <strong>{{ service.name }}</strong><br>
                    <strong>Description:</strong> {{ service.description }}<br>
                    <strong>Price:</strong> ${{ service.price }}<br>
                </li>
            {% endfor %}
        </ul>
    </div>

    <h3>Select a Service and Schedule the Consultation</h3>
    {{ form_start(form) }}
        {{ form_row(form.service) }}
        {{ form_row(form.date) }}
        {{ form_row(form.patientIdentifier) }}
        <button type="submit">Create Consultation</button>
    {{ form_end(form) }}

{% endblock %}
