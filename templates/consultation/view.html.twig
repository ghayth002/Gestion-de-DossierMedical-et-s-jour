 {# templates/consultation/view.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Consultations{% endblock %}

{% block body %}
    <h1>Consultations for {{ patientIdentifier }}</h1>

    {% if consultations is empty %}
        <p>No consultations found for this patient.</p>
    {% else %}
        <ul>
            {% for consultation in consultations %}
                <li>
                    <strong>Service:</strong> {{ consultation.service.name }}<br>
                    <strong>Date:</strong> {{ consultation.date|date('Y-m-d H:i') }}<br>
                    <a href="{{ path('app_edit_consultation', { id: consultation.id }) }}">Edit</a> |
                    <a href="{{ path('app_delete_consultation', { id: consultation.id }) }}" onclick="return confirm('Are you sure you want to delete this consultation?')">Delete</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
