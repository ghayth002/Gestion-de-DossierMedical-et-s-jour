 {# templates/consultation/search.html.twig #}

{% block title %}Search Consultation{% endblock %}

{% block body %}
    <h1>Search Consultation</h1>

    <form method="POST" action="{{ path('app_search_consultation') }}">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.patientIdentifier) }}
            {{ form_widget(form.patientIdentifier) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.search) }}
        </div>
        {{ form_end(form) }}
    </form>

    {% if app.session.flashbag.has('error') %}
        <div class="alert alert-danger">
            {{ app.session.flashbag.get('error')[0] }}
        </div>
    {% endif %}
{% endblock %}
