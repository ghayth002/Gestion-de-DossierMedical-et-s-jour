{% extends 'base.html.twig' %}

{% block title %}Mon Espace Patient{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Bienvenue, {{ patient.prenom }} {{ patient.nom }}</span>
                    <p>
                        <strong>Email:</strong> {{ patient.email }}<br>
                        <strong>Téléphone:</strong> {{ patient.telephone }}<br>
                        <strong>Adresse:</strong> {{ patient.adresse }}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <h4>Mes Dossiers Médicaux</h4>
            {% if dossiers_medicaux is empty %}
                <div class="card-panel blue lighten-4">
                    Vous n'avez pas encore de dossier médical.
                </div>
            {% else %}
                {% for dossier in dossiers_medicaux %}
                    <div class="card horizontal">
                        <div class="card-stacked">
                            <div class="card-content">
                                <span class="card-title">Dossier #{{ dossier.id }}</span>
                                <p>
                                    <strong>Date de création:</strong> {{ dossier.dateDeCreation|date('d/m/Y') }}<br>
                                    <strong>Statut:</strong> {{ dossier.statutDossier }}<br>
                                    <strong>Médecin:</strong> Dr. {{ dossier.medecin.nom }} {{ dossier.medecin.prenom }}
                                </p>
                            </div>
                            <div class="card-action">
                                <a href="{{ path('app_front_office_dossier_show', {'id': dossier.id}) }}" class="blue-text">
                                    Voir les détails
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %} 