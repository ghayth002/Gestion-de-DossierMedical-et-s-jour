{{ form_start(form, {'attr': {'class': 'form-container animate-fade-up'}}) }}
    <div class="form-header">
        <div class="header-icon">
            <i class="material-icons">folder_shared</i>
        </div>
        <div class="header-content">
            <h4 class="header-title">{{ button_label is defined ? 'Modifier le dossier médical' : 'Nouveau dossier médical' }}</h4>
            <p class="header-subtitle">Veuillez remplir les informations du dossier médical</p>
        </div>
                    </div>

    <div class="form-body">
        <div class="form-grid">
            <!-- Left Column -->
            <div class="form-column">
                <!-- Patient Information Section -->
                <div class="form-section">
                    <div class="section-header">
                        <i class="material-icons">person</i>
                        <h5>Informations du Patient</h5>
                    </div>
                    <div class="section-content">
                        <div class="input-group">
                            <div class="input-field with-icon">
                                <i class="material-icons prefix">person</i>
                                {{ form_widget(form.patient, {
                                    'attr': {
                                        'class': 'select-custom',
                                        'placeholder': 'Sélectionner un patient'
                                    }
                                }) }}
                                {{ form_label(form.patient, null, {'label_attr': {'class': 'active'}}) }}
                                {{ form_errors(form.patient, {'attr': {'class': 'error-message'}}) }}
                            </div>
                        </div>
                    </div>
                    </div>

                <!-- Medical Staff Section -->
                <div class="form-section">
                    <div class="section-header">
                        <i class="material-icons">medical_services</i>
                        <h5>Personnel Médical</h5>
                    </div>
                    <div class="section-content">
                        <div class="input-group">
                            <div class="input-field with-icon">
                                <i class="material-icons prefix">medical_services</i>
                                {{ form_widget(form.medecin, {
                                    'attr': {
                                        'class': 'select-custom',
                                        'placeholder': 'Sélectionner un médecin'
                                    }
                                }) }}
                                {{ form_label(form.medecin, null, {'label_attr': {'class': 'active'}}) }}
                                {{ form_errors(form.medecin, {'attr': {'class': 'error-message'}}) }}
                            </div>
                        </div>
                </div>
            </div>

                <!-- File Status Section -->
                <div class="form-section">
                    <div class="section-header">
                        <i class="material-icons">info</i>
                        <h5>État du Dossier</h5>
                    </div>
                    <div class="section-content">
                        <div class="input-group">
                            <div class="input-field with-icon">
                                <i class="material-icons prefix">event</i>
                                {{ form_widget(form.dateDeCreation, {
                                    'attr': {
                                        'class': 'datepicker-custom',
                                        'placeholder': 'JJ/MM/AAAA'
                                    }
                                }) }}
                                {{ form_label(form.dateDeCreation, null, {'label_attr': {'class': 'active'}}) }}
                                {{ form_errors(form.dateDeCreation, {'attr': {'class': 'error-message'}}) }}
                    </div>

                            <div class="input-field with-icon">
                                <i class="material-icons prefix">assignment</i>
                                {{ form_widget(form.statutDossier, {
                                    'attr': {
                                        'class': 'select-custom',
                                        'placeholder': 'Sélectionner un statut'
                                    }
                                }) }}
                                {{ form_label(form.statutDossier, null, {'label_attr': {'class': 'active'}}) }}
                                {{ form_errors(form.statutDossier, {'attr': {'class': 'error-message'}}) }}
                            </div>
                        </div>
                    </div>
                    </div>

                <!-- Documents Section -->
                <div class="form-section">
                    <div class="section-header">
                        <i class="material-icons">image</i>
                        <h5>Documents</h5>
                    </div>
                    <div class="section-content">
                    <div class="file-field input-field">
                        <div class="btn primary waves-effect">
                                <span><i class="material-icons left">cloud_upload</i>Choisir</span>
                            {{ form_widget(form.imageFile) }}
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text" placeholder="Télécharger une image">
                        </div>
                            {{ form_errors(form.imageFile, {'attr': {'class': 'error-message'}}) }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="form-column">
                <div class="form-section full-height">
                    <div class="section-header">
                        <i class="material-icons">history</i>
                        <h5>Historique Médical</h5>
                    </div>
                    <div class="section-content">
                        <div class="input-group">
                            <div class="input-field with-icon">
                                <i class="material-icons prefix">sick</i>
                                {{ form_widget(form.historiqueDesMaladies, {
                                    'attr': {
                                        'class': 'materialize-textarea custom-textarea',
                                        'placeholder': 'Décrivez l\'historique des maladies'
                                    }
                                }) }}
                                {{ form_label(form.historiqueDesMaladies, null, {'label_attr': {'class': 'active'}}) }}
                                {{ form_errors(form.historiqueDesMaladies, {'attr': {'class': 'error-message'}}) }}
                            </div>

                            <div class="input-field with-icon">
                                <i class="material-icons prefix">local_hospital</i>
                                {{ form_widget(form.operationsPassees, {
                                    'attr': {
                                        'class': 'materialize-textarea custom-textarea',
                                        'placeholder': 'Listez les opérations passées'
                                    }
                                }) }}
                                {{ form_label(form.operationsPassees, null, {'label_attr': {'class': 'active'}}) }}
                                {{ form_errors(form.operationsPassees, {'attr': {'class': 'error-message'}}) }}
                            </div>

                            <div class="input-field with-icon">
                                <i class="material-icons prefix">event_note</i>
                                {{ form_widget(form.consultationsPassees, {
                                    'attr': {
                                        'class': 'materialize-textarea custom-textarea',
                                        'placeholder': 'Listez les consultations passées'
                                    }
                                }) }}
                                {{ form_label(form.consultationsPassees, null, {'label_attr': {'class': 'active'}}) }}
                                {{ form_errors(form.consultationsPassees, {'attr': {'class': 'error-message'}}) }}
                            </div>

                            <div class="input-field with-icon">
                                <i class="material-icons prefix">note_add</i>
                                {{ form_widget(form.notes, {
                                    'attr': {
                                        'class': 'materialize-textarea custom-textarea',
                                        'placeholder': 'Notes additionnelles'
                                    }
                                }) }}
                                {{ form_label(form.notes, null, {'label_attr': {'class': 'active'}}) }}
                                {{ form_errors(form.notes, {'attr': {'class': 'error-message'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-footer">
        <div class="action-buttons">
            <a href="{{ path('app_dossier_medicale_index') }}" class="btn-flat waves-effect">
                <i class="material-icons left">arrow_back</i>
                Retour
            </a>
        <button class="btn primary waves-effect waves-light" type="submit">
            <i class="material-icons left">save</i>
            {{ button_label|default('Enregistrer') }}
        </button>
        </div>
    </div>
{{ form_end(form) }}

<style>
    :root {
        --primary-color: #2563eb;
        --primary-light: #3b82f6;
        --primary-dark: #1d4ed8;
        --error-color: #ef4444;
        --success-color: #10b981;
        --text-color: #1f2937;
        --text-light: #6b7280;
        --bg-light: #f8fafc;
        --border-color: #e2e8f0;
        --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --input-padding: 2.5rem;
    }

    .form-container {
        background: white;
        border-radius: 1rem;
        box-shadow: var(--card-shadow);
        margin: 2rem auto;
        max-width: 1400px;
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: white;
        padding: 2rem;
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .header-icon {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 1rem;
        padding: 1rem;
    }

    .header-icon i {
        font-size: 2.5rem;
    }

    .header-content {
        flex: 1;
    }

    .header-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0;
    }

    .header-subtitle {
        margin: 0.5rem 0 0;
        opacity: 0.8;
    }

    .form-body {
        padding: 2rem;
        background-color: #f8fafc;
    }

    .form-grid {
        display: grid;
        grid-template-columns: minmax(300px, 1fr) minmax(300px, 1fr);
        gap: 2rem;
    }

    .form-column {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .form-section {
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 0.75rem;
        overflow: hidden;
        height: fit-content;
        transition: all 0.3s ease;
        margin-bottom: 1.5rem;
    }

    .form-section:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-section.full-height {
        height: 100%;
    }

    .section-header {
        background: linear-gradient(to right, var(--primary-light), var(--primary-color));
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        border-bottom: 1px solid var(--border-color);
    }

    .section-header i {
        color: white;
        background: rgba(255, 255, 255, 0.2);
        padding: 0.5rem;
        border-radius: 0.5rem;
    }

    .section-header h5 {
        color: white;
        margin: 0;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .section-content {
        padding: 1.5rem;
        background: white;
    }

    .input-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .input-field {
        position: relative;
        margin: 1.5rem 0;
        padding-top: var(--input-padding);
    }

    .input-field.with-icon {
        margin-left: 0;
        padding-left: 3rem;
    }

    .input-field .prefix {
        position: absolute;
        left: 0;
        top: calc(var(--input-padding) + 0.75rem);
        color: var(--primary-color);
        opacity: 0.8;
        transition: all 0.3s ease;
    }

    .input-field:focus-within .prefix {
        opacity: 1;
        transform: scale(1.1);
    }

    .input-field label {
        position: absolute;
        top: 0;
        left: 3rem;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--primary-color);
        transition: all 0.3s ease;
        background: transparent;
        padding: 0;
        margin: 0;
    }

    .input-field label.active {
        color: var(--primary-color);
        transform: none;
    }

    .select-custom, .datepicker-custom {
        border: 2px solid var(--border-color);
        border-radius: 0.5rem;
        padding: 0.75rem 1rem 0.75rem 2.5rem;
        width: 100%;
        background-color: white;
        transition: all 0.3s ease;
        height: 3.5rem;
        font-size: 1rem;
        color: var(--text-color);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    }

    .select-custom:focus, .datepicker-custom:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        outline: none;
    }

    .custom-textarea {
        border: 2px solid var(--border-color) !important;
        border-radius: 0.5rem !important;
        padding: 1rem 1rem 1rem 2.5rem !important;
        min-height: 120px !important;
        font-size: 1rem !important;
        color: var(--text-color) !important;
        resize: vertical;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05) !important;
        transition: all 0.3s ease !important;
    }

    .custom-textarea:focus {
        border-color: var(--primary-color) !important;
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1) !important;
    }

    .file-field {
        margin-top: var(--input-padding);
    }

    .file-field .btn {
        height: auto;
        line-height: normal;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        background-color: var(--primary-color);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    }

    .file-path-wrapper {
        padding-left: 1rem;
    }

    .file-path {
        border: 2px solid var(--border-color) !important;
        border-radius: 0.5rem !important;
        height: 3.5rem !important;
        padding: 0 1rem !important;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05) !important;
    }

    .error-message {
        color: var(--error-color);
        font-size: 0.75rem;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .error-message::before {
        content: '⚠️';
        font-size: 0.875rem;
    }

    .field-hint {
        font-size: 0.75rem;
        color: var(--text-light);
        margin-top: 0.25rem;
        margin-left: 3rem;
    }

    .required-field label::after {
        content: ' *';
        color: var(--error-color);
    }

    .input-field:focus-within::after {
        content: '';
        position: absolute;
        left: 0;
        top: var(--input-padding);
        height: 3.5rem;
        width: 3px;
        background: var(--primary-color);
        border-radius: 0 3px 3px 0;
    }

    .form-footer {
        background: white;
        padding: 1.5rem;
        border-top: 1px solid var(--border-color);
    }

    .action-buttons {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
    }

    .btn.primary {
        background-color: var(--primary-color);
        border-radius: 0.5rem;
        text-transform: none;
        font-weight: 500;
        padding: 0.75rem 1.5rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s ease;
    }

    .btn.primary:hover {
        background-color: var(--primary-dark);
        transform: translateY(-1px);
        box-shadow: 0 4px 6px rgba(37, 99, 235, 0.2);
    }

    .btn-flat {
        color: var(--text-light);
        border-radius: 0.5rem;
        text-transform: none;
        font-weight: 500;
        padding: 0.75rem 1.5rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s ease;
    }

    .btn-flat:hover {
        background-color: var(--bg-light);
        color: var(--text-color);
    }

    /* Responsive adjustments */
    @media (max-width: 992px) {
        .form-grid {
            grid-template-columns: 1fr;
        }

        .form-section.full-height {
        height: auto;
        }
    }

    @media (max-width: 768px) {
        .form-container {
            margin: 1rem;
        }

        .form-header {
            padding: 1.5rem;
            flex-direction: column;
            text-align: center;
        }

        .form-body {
            padding: 1rem;
        }

        .input-field.with-icon {
            padding-left: 2.5rem;
        }

        .input-field .prefix {
            font-size: 1.25rem;
        }

        .input-field label {
            left: 2.5rem;
        }

        .field-hint {
            margin-left: 2.5rem;
        }

        .action-buttons {
            flex-direction: column-reverse;
        }

        .btn, .btn-flat {
            width: 100%;
            justify-content: center;
        }
    }

    /* Animation */
    .animate-fade-up {
        animation: fadeUp 0.5s ease-out;
    }

    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Add subtle hover effect to inputs */
    .select-custom:hover, .datepicker-custom:hover, .custom-textarea:hover {
        border-color: var(--primary-light);
    }
</style> 

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize textareas
    var textareas = document.querySelectorAll('.materialize-textarea');
    M.textareaAutoResize(textareas);
    
    // Initialize datepicker
    var datepickers = document.querySelectorAll('.datepicker-custom');
    M.Datepicker.init(datepickers, {
        format: 'yyyy-mm-dd',
        autoClose: true,
        i18n: {
            months: ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'],
            monthsShort: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Jun', 'Jul', 'Aoû', 'Sep', 'Oct', 'Nov', 'Déc'],
            weekdays: ['Dimanche', 'Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi'],
            weekdaysShort: ['Dim', 'Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam'],
            weekdaysAbbrev: ['D', 'L', 'M', 'M', 'J', 'V', 'S']
        }
    });
});
</script> 