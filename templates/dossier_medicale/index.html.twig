{% extends 'base.html.twig' %}

{% block title %}Gestion des Dossiers Médicaux{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="header-section">
                <h3 class="header">
                    <i class="material-icons" style="font-size: 2.5rem;">folder_shared</i>
                    Gestion des Dossiers Médicaux
                </h3>
                <a href="{{ path('app_dossier_medicale_new') }}" class="btn-floating btn-large waves-effect waves-light blue pulse tooltipped" data-position="left" data-tooltip="Créer un nouveau dossier">
                    <i class="material-icons">add</i>
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="card animate-fade-up">
                <div class="card-content">
                    <span class="card-title">
                        <i class="material-icons">list</i>
                        Liste des Dossiers
                    </span>

                    {% if dossier_medicales is empty %}
                        <div class="center-align grey-text">
                            <i class="material-icons" style="font-size: 4rem;">folder_off</i>
                            <p>Aucun dossier médical n'a été créé.</p>
                            <a href="{{ path('app_dossier_medicale_new') }}" class="btn waves-effect waves-light blue">
                                <i class="material-icons left">add</i>
                                Créer le premier dossier
                            </a>
                        </div>
                    {% else %}
                        <table class="striped highlight responsive-table">
                            <thead>
                                <tr>
                                    <th><i class="material-icons tiny">tag</i> ID</th>
                                    <th><i class="material-icons tiny">person</i> Patient</th>
                                    <th><i class="material-icons tiny">event</i> Date de création</th>
                                    <th><i class="material-icons tiny">verified</i> Statut</th>
                                    <th><i class="material-icons tiny">medical_services</i> Médecin</th>
                                    <th><i class="material-icons tiny">more_vert</i> Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for dossier in dossier_medicales %}
                                <tr class="animate-fade-up" style="animation-delay: {{ loop.index * 0.1 }}s">
                                    <td>#{{ dossier.id }}</td>
                                    <td>
                                        <div class="patient-info">
                                            <i class="material-icons tiny">person</i>
                                            {{ dossier.patient.nom }} {{ dossier.patient.prenom }}
                                        </div>
                                    </td>
                                    <td>{{ dossier.dateDeCreation ? dossier.dateDeCreation|date('d/m/Y') : '' }}</td>
                                    <td>
                                        <span class="status-badge {{ dossier.statutDossier == 'Actif' ? 'status-success' : 'status-warning' }}">
                                            <i class="material-icons tiny">{{ dossier.statutDossier == 'Actif' ? 'check_circle' : 'pending' }}</i>
                                            {{ dossier.statutDossier }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="doctor-info">
                                            <i class="material-icons tiny">medical_services</i>
                                            Dr. {{ dossier.medecin.nom }} {{ dossier.medecin.prenom }}
                                        </div>
                                    </td>
                                    <td class="actions-cell">
                                        <div class="action-buttons">
                                            <a href="{{ path('app_dossier_medicale_show', {'id': dossier.id}) }}" 
                                               class="btn-floating waves-effect waves-light blue tooltipped"
                                               data-position="top"
                                               data-tooltip="Voir les détails">
                                                <i class="material-icons">visibility</i>
                                            </a>
                                            <a href="{{ path('app_dossier_medicale_edit', {'id': dossier.id}) }}" 
                                               class="btn-floating waves-effect waves-light orange tooltipped"
                                               data-position="top"
                                               data-tooltip="Modifier">
                                                <i class="material-icons">edit</i>
                                            </a>
                                            <form method="post" action="{{ path('app_dossier_medicale_delete', {'id': dossier.id}) }}" style="display: inline-block" 
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce dossier ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dossier.id) }}">
                                                <button type="submit" class="btn-floating waves-effect waves-light red tooltipped"
                                                        data-position="top"
                                                        data-tooltip="Supprimer">
                                                    <i class="material-icons">delete</i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 2rem 0;
    }

    .header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin: 0;
    }

    .patient-info, .doctor-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .actions-cell {
        width: 180px;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-start;
    }

    .action-buttons .btn-floating {
        width: 35px;
        height: 35px;
        line-height: 35px;
    }

    .action-buttons .btn-floating i {
        font-size: 1.2rem;
        line-height: 35px;
    }

    /* Enhanced Empty State */
    .center-align.grey-text {
        padding: 3rem 0;
    }

    .center-align.grey-text i {
        margin-bottom: 1rem;
        color: #b0bec5;
    }

    .center-align.grey-text p {
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
        color: #78909c;
    }
</style>
{% endblock %} 