{% extends 'base.html.twig' %}

{% block title %}Dossier Médical{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="header-section">
                <h3 class="header">
                    <i class="material-icons" style="font-size: 2.5rem;">folder_shared</i>
                    Dossier Médical #{{ dossier_medicale.id }}
                </h3>
                <div class="header-actions">
                    <a href="{{ path('app_dossier_medicale_edit', {'id': dossier_medicale.id}) }}" 
                       class="btn-floating btn-large waves-effect waves-light orange tooltipped"
                       data-position="left"
                       data-tooltip="Modifier le dossier">
                        <i class="material-icons">edit</i>
                    </a>
                    <a href="{{ path('app_dossier_medicale_index') }}" 
                       class="btn-floating btn-large waves-effect waves-light blue tooltipped"
                       data-position="left"
                       data-tooltip="Retour à la liste">
                        <i class="material-icons">arrow_back</i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m6">
            <div class="card animate-fade-up">
                <div class="card-content">
                    <span class="card-title">
                        <i class="material-icons">person</i>
                        Informations du Patient
                    </span>
                    <div class="info-list">
                        <p>
                            <i class="material-icons tiny">badge</i>
                            <strong>Nom complet:</strong> {{ dossier_medicale.patient.nom }} {{ dossier_medicale.patient.prenom }}
                        </p>
                        <p>
                            <i class="material-icons tiny">cake</i>
                            <strong>Date de naissance:</strong> {{ dossier_medicale.patient.dateDeNaissance|date('d/m/Y') }}
                        </p>
                        <p>
                            <i class="material-icons tiny">home</i>
                            <strong>Adresse:</strong> {{ dossier_medicale.patient.adresse }}
                        </p>
                        <p>
                            <i class="material-icons tiny">phone</i>
                            <strong>Téléphone:</strong> {{ dossier_medicale.patient.telephone }}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col s12 m6">
            <div class="card animate-fade-up" style="animation-delay: 0.1s;">
                <div class="card-content">
                    <span class="card-title">
                        <i class="material-icons">info</i>
                        Informations du Dossier
                    </span>
                    <div class="info-list">
                        <p>
                            <i class="material-icons tiny">event</i>
                            <strong>Date de création:</strong> {{ dossier_medicale.dateDeCreation|date('d/m/Y H:i') }}
                        </p>
                        <p>
                            <i class="material-icons tiny">verified</i>
                            <strong>Statut:</strong>
                            <span class="status-badge {{ dossier_medicale.statutDossier == 'Actif' ? 'status-success' : 'status-warning' }}">
                                <i class="material-icons tiny">{{ dossier_medicale.statutDossier == 'Actif' ? 'check_circle' : 'pending' }}</i>
                                {{ dossier_medicale.statutDossier }}
                            </span>
                        </p>
                        <p>
                            <i class="material-icons tiny">medical_services</i>
                            <strong>Médecin traitant:</strong> Dr. {{ dossier_medicale.medecin.nom }} {{ dossier_medicale.medecin.prenom }}
                        </p>
                        <p>
                            <i class="material-icons tiny">admin_panel_settings</i>
                            <strong>Responsable administratif:</strong> {{ dossier_medicale.responsableAdministratif.nom }} {{ dossier_medicale.responsableAdministratif.prenom }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="card animate-fade-up" style="animation-delay: 0.2s;">
                <div class="card-content">
                    <span class="card-title">
                        <i class="material-icons">history</i>
                        Historique Médical
                    </span>
                    <div class="history-section">
                        <div class="section">
                            <h6 class="blue-text">
                                <i class="material-icons tiny">sick</i>
                                Historique des Maladies
                            </h6>
                            <div class="content-box">
                                {{ dossier_medicale.historiqueDesMaladies|nl2br ?: 'Aucun historique enregistré' }}
                            </div>
                        </div>

                        <div class="section">
                            <h6 class="blue-text">
                                <i class="material-icons tiny">medical_services</i>
                                Opérations Passées
                            </h6>
                            <div class="content-box">
                                {{ dossier_medicale.operationsPassees|nl2br ?: 'Aucune opération enregistrée' }}
                            </div>
                        </div>

                        <div class="section">
                            <h6 class="blue-text">
                                <i class="material-icons tiny">event_note</i>
                                Consultations Passées
                            </h6>
                            <div class="content-box">
                                {{ dossier_medicale.consultationsPassees|nl2br ?: 'Aucune consultation enregistrée' }}
                            </div>
                        </div>

                        {% if dossier_medicale.notes %}
                        <div class="section">
                            <h6 class="blue-text">
                                <i class="material-icons tiny">note</i>
                                Notes Additionnelles
                            </h6>
                            <div class="content-box">
                                {{ dossier_medicale.notes|nl2br }}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if dossier_medicale.image %}
    <div class="row">
        <div class="col s12">
            <div class="card animate-fade-up" style="animation-delay: 0.3s;">
                <div class="card-content">
                    <span class="card-title">
                        <i class="material-icons">image</i>
                        Documents Médicaux
                    </span>
                    <div class="medical-image-container">
                        <img src="{{ asset('uploads/dossiers/' ~ dossier_medicale.image) }}" 
                             alt="Document médical" 
                             class="medical-image">
                        <div class="medical-image-overlay">
                            <a href="{{ asset('uploads/dossiers/' ~ dossier_medicale.image) }}" 
                               target="_blank"
                               class="btn-floating waves-effect waves-light blue tooltipped"
                               data-position="top"
                               data-tooltip="Voir l'image en taille réelle">
                                <i class="material-icons">zoom_in</i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <div class="row">
        <div class="col s12">
            <div class="card animate-fade-up" style="animation-delay: 0.4s;">
                <div class="card-content">
                    <span class="card-title">
                        <i class="material-icons">event_note</i>
                        Séjours Hospitaliers
                    </span>
                    {% if dossier_medicale.sejours is empty %}
                        <div class="center-align grey-text">
                            <i class="material-icons" style="font-size: 4rem;">hotel</i>
                            <p>Aucun séjour enregistré pour ce dossier.</p>
                        </div>
                    {% else %}
                        <table class="striped highlight responsive-table">
                            <thead>
                                <tr>
                                    <th><i class="material-icons tiny">event</i> Date d'entrée</th>
                                    <th><i class="material-icons tiny">event_available</i> Date de sortie</th>
                                    <th><i class="material-icons tiny">local_hospital</i> Type</th>
                                    <th><i class="material-icons tiny">payments</i> Frais</th>
                                    <th><i class="material-icons tiny">payment</i> Statut</th>
                                    <th><i class="material-icons tiny">more_vert</i> Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for sejour in dossier_medicale.sejours %}
                                    <tr class="animate-fade-up" style="animation-delay: {{ loop.index * 0.1 }}s">
                                        <td>{{ sejour.dateEntree|date('d/m/Y H:i') }}</td>
                                        <td>{{ sejour.dateSortie|date('d/m/Y H:i') }}</td>
                                        <td>
                                            <span class="chip">
                                                <i class="material-icons tiny">{{ sejour.typeSejour == 'Hospitalisation' ? 'hotel' : 'medical_services' }}</i>
                                                {{ sejour.typeSejour }}
                                            </span>
                                        </td>
                                        <td>{{ sejour.fraisSejour + (sejour.prixExtras ?: 0) }} €</td>
                                        <td>
                                            <span class="status-badge {{ sejour.statutPaiement == 'Payé' ? 'status-success' : 'status-warning' }}">
                                                <i class="material-icons tiny">{{ sejour.statutPaiement == 'Payé' ? 'check_circle' : 'pending' }}</i>
                                                {{ sejour.statutPaiement }}
                                            </span>
                                        </td>
                                        <td>
                                            <a href="{{ path('app_sejour_show', {'id': sejour.id}) }}" 
                                               class="btn-floating waves-effect waves-light blue tooltipped"
                                               data-position="left"
                                               data-tooltip="Voir les détails">
                                                <i class="material-icons">visibility</i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 2rem 0;
    }

    .header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 1rem;
    }

    .info-list p {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0.8rem 0;
    }

    .info-list i {
        color: #3B82F6;
    }

    .history-section .section {
        margin-bottom: 2rem;
    }

    .history-section h6 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .content-box {
        background-color: #F8FAFC;
        border-radius: 0.5rem;
        padding: 1rem;
        border: 1px solid #E2E8F0;
    }

    /* Enhanced Empty State */
    .center-align.grey-text {
        padding: 3rem 0;
    }

    .center-align.grey-text i {
        margin-bottom: 1rem;
        color: #b0bec5;
    }

    .center-align.grey-text p {
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
        color: #78909c;
    }
</style>
{% endblock %} 