{% extends 'departement/base.html.twig' %}

{% block title %} Ajouter un Département {% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">
        <i class="fas fa-plus-circle"></i> Ajouter un Nouveau Département
    </h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-primary text-white text-center">
                    <h5 class="mb-0"><i class="fas fa-building"></i> Formulaire d'Ajout</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-tag"></i> Nom du Département</label>
                        {{ form_widget(form.Nom, {'attr': {'class': 'form-control shadow-sm', 'placeholder': 'Entrez le nom du département'}}) }}
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-map-marker-alt"></i> Adresse</label>
                        {{ form_widget(form.Adresse, {'attr': {'class': 'form-control shadow-sm', 'placeholder': 'Entrez l\'adresse'}}) }}
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-layer-group"></i> Nombre d'Étages</label>
                        {{ form_widget(form.nbrEtage, {'attr': {'class': 'form-control shadow-sm', 'placeholder': 'Entrez le nombre d\'étages'}}) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg shadow">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                    </div>

                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

